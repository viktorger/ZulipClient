<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EmojiView">
        <attr name="count" format="integer" />
        <attr name="emoji" format="string" />
        <attr name="emojiViewStyle" format="reference" />
        <attr name="textColor" format="color" />
        <attr name="fontSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FlexBoxLayout">
        <attr name="spacing" format="dimension" />
        <attr name="flexBoxLayoutStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MessageLayout">
        <attr name="avatar" format="reference" />
        <attr name="username" format="string" />
        <attr name="message" format="string" />
        <attr name="image_indent" format="dimension" />
        <attr name="message_body_indent" format="dimension" />
        <attr name="message_padding_vertical" format="dimension" />
        <attr name="message_padding_horizontal" format="dimension" />
    </declare-styleable>

    <declare-styleable name="OwnMessageLayout">
        <attr name="own_message_body_indent" format="dimension" />
    </declare-styleable>
</resources>